<main>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<!-- index.hbs -->
<h1>Organizers</h1>
<p>Here you can view, add, update, and remove organizers from the database</p>

{{!-- Create a table --}}
<table id = "organizers-table">

{{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.organizer_id}}>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.username}}</td>

            <td><button onclick="deleteOrganizer({{this.organizer_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_organizer.js"></script>
</main>