<main>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<!-- index.hbs -->
<h1>Players</h1>
<p>Here you can view, add, update, and remove players from the database</p>

{{!-- Create a table --}}
<table id = "player-roster-table">

{{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.character_player_plays_id}}>
            <td>{{this.character_player_plays_id}}</td>
            <td>{{this.username}}</td>
            <td>{{this.character_name}}</td>
            <td>{{this.game_name}}</td>
            
            <td><button onclick="deletePlayerRoster({{this.character_player_plays_id}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_player_roster.js"></script>

{{!-- Form to add a record to the table  --}}
<h2>Adding Data</h2>
<p>To add a new player roster, please enter their information below and click 'Submit'!</p>
<form id="add-player-roster">
    <label for="input-player">Player: </label>
    <select name="input-player" id ="input-player-ajax">
        <option value="">Select a Player</option>
        {{#each playerData}}
        <option value="{{this.player_id}}">{{this.username}}</option>
        {{/each}}
    </select>

    <label for="input-character">Character: </label>
    <select name="input-character" id ="input-character-ajax">
        <option value="">Select a Character</option>
        {{#each characterData}}
        <option value="{{this.character_id}}">{{this.character_name}}</option>
        {{/each}}
    </select>

    <label for="input-game">Game: </label>
    <select name="input-game" id ="input-game-ajax">
        <option value="">Select a game</option>
        {{#each gameData}}
        <option value="{{this.game_id}}">{{this.game_name}}</option>
        {{/each}}
    </select>

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_player_roster.js"></script>

<h2>Updating a Player Roster</h2>
<p></p>
<form id="update-player-roster">

    <label for="update-player-roster-id">Player Roster ID: </label>
    <select  name="update-player-roster-id" id="update-player-roster-id">
        <option value="test">Select a Player Roster</option>
        {{#each data}}
        <option value="{{this.character_player_plays_id}}">{{this.character_player_plays_id}}</option>
        {{/each}}
    </select>

    <label for="update-character-id">Character: </label>
    <select  name="update-character-id" id="update-character-id">
        <option value="test">Select a Character</option>
        {{#each characterData}}
        <option value="{{this.character_id}}">{{this.character_name}}</option>
        {{/each}}
    </select>
        
   <label for="update-game-id">Game: </label>
    <select name="update-game" id ="update-game-id">
        <option value="">Select a game</option>
        {{#each gameData}}
        <option value="{{this.game_id}}">{{this.game_name}}</option>
        {{/each}}
    </select>

    <input type="submit">

</form>

<script src="./js/update_player_roster.js"></script>
</main>