

<main>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<!-- index.hbs -->
<h1>Characters</h1>
<p>Here you can view, add, update, and remove characters from the database</p>

{{!-- Create a table --}}
<table id = "characters-table">

{{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.characterID}}>
            <td>{{this.characterID}}</td>
            <td>{{this.character_name}}</td>
            <td>{{this.is_legal}}</td>
            <td>{{this.gameID}}</td>
            
            <td><button onclick="deletePlayer({{this.playerID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_character.js"></script>

<!-- /views/index.hbs -->

{{!-- Form to add a record to the table  --}}
<h2>Adding Data</h2>
<p>To add a new character, please enter their information below and click 'Submit'!</p>
<form id="add-character">
    <label for="input-character_name">Character Name: </label>
    <input type="text" name="input-character_name" id="input-character_name">
    
    <label for="input-character_legal">Legal to play? 1 for yes, 0 for no </label>
    <input type="number" name="input-character_legal" id="input-character_legal">

    <select  name="input-character_name" id="mySelect">
        <option value="test">What game is the character from?</option>
        {{#each gameData}}
        <option value="{{this.gameID}}">{{this.game_name}}</option>
        {{/each}}
    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_character.js"></script>

<h2>Updating A Character</h2>
<p></p>
<form id="update-character">

    <label for="input-character_name">character name: </label>
    <select  name="input-character_name" id="mySelect">
        <option value="test">Select a Character</option>
        {{#each data}}
        <option value="{{this.playerID}}">{{this.character_name}}</option>
        {{/each}}
    </select>

    <label for="input-character_legal">Change legality: </label>
    <input type = "number" name="input-character_legal" id="input-character_legal-update">
        <option>input a 0 or a 1</option>
        
   
    <input type="submit">

</form>

<script src="./js/update_character.js"></script>
</main>